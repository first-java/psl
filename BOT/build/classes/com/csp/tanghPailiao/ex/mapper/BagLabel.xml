<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csp.tanghPailiao.ex.dao.BagLabelDao">

	<!-- 自定义结果集,可以将sql语句查询的Resultset结果集与实体类一一对应 -->
	<resultMap type="com.csp.tanghPailiao.entity.BagLabel" id="bagLabel">
		<!-- 用于主键的映射 -->
		<!-- <id column="id" property="id" javaType="int" /> -->
		<result column="BAG_WEIGHT" property="bagWeight" javaType="java.lang.String"
			jdbcType="VARCHAR" />
		<result column="LABEL_WEIGHT" property="labelWeight" javaType="java.lang.String"
			jdbcType="VARCHAR" />
		<result column="LABEL_QTY" property="labelQty" javaType="java.lang.String"
			jdbcType="VARCHAR" />
		<result column="PROJECT1" property="project1" javaType="java.lang.String"
			jdbcType="VARCHAR" />
	</resultMap>

	<insert id="saveBagLabel" parameterType="com.csp.tanghPailiao.entity.BagLabel">
		insert into
		SYS_PSL.CSP_PL_LABELWEIGHT
		(bag_weight,label_weight,label_qty,project1)
		values(#{bagWeight,jdbcType=VARCHAR},
		#{labelWeight,jdbcType=VARCHAR},
		#{labelQty,jdbcType=VARCHAR},
		#{project1,jdbcType=VARCHAR})
	</insert>
	<select id="bagLabelWeight" resultType="java.lang.String"
		resultMap="bagLabel">
		select * from SYS_PSL.CSP_PL_LABELWEIGHT where
		project1=#{project1,jdbcType=VARCHAR}
	</select>

	<select id="selectLabel" resultType="java.lang.String"
		resultMap="bagLabel">
		select * from SYS_PSL.CSP_PL_LABELWEIGHT where project1 like
		'%'||#{project1,jdbcType=VARCHAR}||'%'
	</select>

	<update id="updateLabel" parameterType="com.csp.tanghPailiao.entity.Eqpt">
		update
		SYS_PSL.CSP_PL_LABELWEIGHT
		set bag_weight=#{bagWeight,jdbcType=VARCHAR}
		,label_weight=#{labelWeight,jdbcType=VARCHAR},label_qty=#{labelQty,jdbcType=VARCHAR}
		where
		project1=#{project1,jdbcType=VARCHAR}

	</update>


</mapper>